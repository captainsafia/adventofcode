{
  "authors": [ "Martin Costello" ],
  "copyright": "Martin Costello (c) 2015",
  "description": "Solutions for Advent of Code.",
  "title": "AdventOfCode",
  "version": "2.0.0-*",

  "buildOptions": {
    "additionalArguments": [ "/ruleset:../../AdventOfCode.ruleset", "/additionalfile:../../stylecop.json" ],
    "emitEntryPoint": true,
    "keyFile": "../../AdventOfCode.snk",
    "preserveCompilationContext": true,
    "warningsAsErrors": true,
    "xmlDoc": true,
    "compile": {
      "includeFiles": [ "../../AssemblyVersion.cs", "../../CommonAssemblyInfo.cs" ]
    },
    "copyToOutput": {
      "includeFiles": [ "appsettings.json" ]
    },
    "embed": {
      "include": "Input/**/input.txt"
    }
  },

  "configurations": {
    "Debug": {
      "buildOptions": {
        "define": [ "DEBUG", "TRACE" ],
        "optimize": false
      }
    },
    "Release": {
      "buildOptions": {
        "define": [ "RELEASE", "TRACE" ],
        "optimize": true
      }
    }
  },

  "dependencies": {
    "Microsoft.NETCore.App": {
      "version": "1.0.0",
      "type": "platform"
    },
    "Newtonsoft.Json" : "9.0.1",
    "StyleCop.Analyzers": {
      "version": "1.0.0",
      "type": "build"
    }
  },

  "packOptions": {
    "iconUrl": "https://martincostello.com/favicon.ico",
    "licenseUrl": "https://github.com/martincostello/adventofcode/blob/master/LICENSE",
    "owners": [ "Martin Costello" ],
    "projectUrl": "https://github.com/martincostello/adventofcode",
    "releaseNotes": "https://github.com/martincostello/adventofcode/releases",
    "repository": {
      "type": "git",
      "url": "https://github.com/martincostello/adventofcode.git"
    },
    "requireLicenseAcceptance": false,
    "summary": "Solutions for Advent of Code.",
    "tags": [ "advent of code" ]
  },

  "tooling": {
    "defaultNamespace": "MartinCostello.AdventOfCode"
  },

  "frameworks": {
    "netcoreapp1.0": {
      "imports": [
        "dotnet5.6",
        "portable-net45+win8"
      ]
    }
  }
}
